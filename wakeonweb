    <title>Wake-on-LAN</title>
</head>
<body>
    <h1>Wake-on-LAN</h1>
    <%= content %>
</body>
</html>

@@ index.html.ep
% layout 'default';

% if ( my $output = flash('output') ) {
<div><pre><%= $output %> <pre></div>
% }

<table>
    <thead>
        <tr>
            <th>Hostname</th>
            <th>MAC-Address</th>
        </tr>
    </thead>
    <tbody>
% for my $record ( @$records ) {
    % my $img_src =  $up->{$record->{name}} ? 'green-circle.svg' : 'red-circle.svg' ;
        <tr>
            <td> <img src="<%= $img_src %>"> <%= $record->{name} %></td>
            <td><%= $record->{mac} %></td>
            <td><%= button_to 'wake up' => 'wake_up' => { mac => $record->{mac} }  %></td>
        </tr>
% }
    </tbody>
</table>

